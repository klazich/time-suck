{
  "name": "time-suck",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Kevin Lazich <dev@kevinlazich.com>",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.19.3",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-winston": "^2.5.1",
    "mongoose": "^5.1.6",
    "nodemon": "^1.17.5",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "husky": "^1.0.0-rc.9",
    "lint-staged": "^7.2.0"
  },
  "scripts": {
    "build": "babel src -d lib",
    "prestart": "yarn run -s build",
    "start": "node -r dotenv/config lib/index.js",
    "prettier": "prettier --write \"src/**/*.{js,jsx,json,css}\""
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "babel-plugin-inline-import"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
